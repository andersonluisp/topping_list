<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_topping"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:padding="5dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="3px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_topping"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/topping5003" />

        <View
            android:id="@+id/bg_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#99000000"
            app:layout_constraintBottom_toBottomOf="@id/iv_topping"
            app:layout_constraintEnd_toEndOf="@id/iv_topping"
            app:layout_constraintStart_toStartOf="@id/iv_topping" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_type_topping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textAppearance="@style/topping_title"
            app:layout_constraintBottom_toBottomOf="@id/bg_title"
            app:layout_constraintStart_toStartOf="@id/bg_title"
            app:layout_constraintTop_toTopOf="@id/bg_title"
            tools:text="Café da Manhã" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
